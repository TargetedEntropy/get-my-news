# Example environment file - copy to .env and fill in your values

# API Configuration
NEWSFILTER_API_KEY=your_api_key_here
NEWSFILTER_API_URL=https://api.newsfilter.io

# Database Configuration
DATABASE_URL=mysql+pymysql://username:password@localhost/newsfilter_db

# Rate Limiting
MAX_DAILY_REQUESTS=100
RATE_LIMIT_FILE=data/rate_limit.json
RATE_LIMIT_RESET_HOUR=0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log
CONSOLE_LOGGING=true
MAX_LOG_SIZE_MB=10
LOG_BACKUP_COUNT=5
STRUCTURED_LOGGING=false

# Process Lock
PROCESS_LOCK_FILE=/tmp/newsfilter_scraper.lock

# Directories
DATA_DIRECTORY=data
LOGS_DIRECTORY=logs

# Environment
ENVIRONMENT=production